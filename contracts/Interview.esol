contract Erc20Sender {
    uint fee = uint(5) / uint(100);

    function send(address erc20, uint amount, address to) external payable {
        require(erc20Balance(erc20) > amount, "Not enough");
        IERC20(erc20).transferFrom(
            address(this),
            to,
            amount * fee
        );
    }

    function erc20Balance(address to) internal view {
        return IERC20(erc20).balanceOf(address(this));
    }
}